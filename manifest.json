{
  "name": "Material Player",
  "version": "1",
  "description": "Material designed multimedia player",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": {
    "36": "icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' https://apis.google.com https://www.google.com; object-src 'self'",
  "permissions": ["http://*.google.com/", "https://*.google.com/", "file://*/*", "tabs"]
}

