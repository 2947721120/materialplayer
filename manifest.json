{
  "name": "Material Player",
  "description": "Multimedia layer for browser. Material designed.",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "36": "icon.png"
  },
  "permissions": ["file://*/*", "fileSystem"],
  "file_handlers": {
    "any": {
      "extensions": ["mp3"]
    }
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "sandbox": {
    "pages": [
    "sandbox.html"
    ]
  },
  "web_accessible_resources": ["index.html"]
}

